<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PlaylistsActivity" android:label="@string/playlists"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PlayerActivity" android:label="@string/player"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AlbumsActivity" android:label="@string/albums"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".SettingsActivity" android:label="@string/settings"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>